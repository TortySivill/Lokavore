extends layout

block content
  div(class = 'col-sm-9 col-md-9')
    div(class = 'container')
      h1= title


      form(method='post', enctype='multipart/form-data', action='')
        div.form-group
          label(for='title') Title:
          input#title.form-control(type='text', placeholder='Name of product' name='title' required='true' value=(undefined===produce ? '' : produce.title) )
          label(for='Category') Category:
          select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
            for category in nav
              for subcat in category.subcats
                option(value = {'category' : category.id,'subcat': subcat.id}) #{category.name}-#{subcat.name}

          label(for='price') Price (Â£):
          input#price.form-control(type='number', placeholder='3.00' name='price' required='true' value=(undefined===produce ? '' : produce.price) )
          label(for='rating') Rating:
          input#rating.form-control(type='number', placeholder='Max=5' name='rating' required='true' value=(undefined===produce ? '' : produce.rating) )
          label(for='quantity') Quantity:
          input#quantity.form-control(type='number', placeholder='6' name='quantity' required='true' value=(undefined===produce ? '' : produce.quantity) )
          label(for='weight') Weight (g):
          input#weight.form-control(type='number', placeholder='500' name='weight' required='true' value=(undefined===produce ? '' : produce.weight) )
          label(for='description') Description:
          input#description.form-control(type='text', placeholder='Yummy tomatoes grown in the field' name='description' required='true' value=(undefined===produce ? '' : produce.description) )
          label(for='image') Image:
          input#description.form-control(type='file', placeholder= 'Upload Image here' name='image' value=(undefined===produce ? '' : produce.image) )

        button.btn.btn-primary(type='submit') Submit



      if errors
        ul
          for error in errors
            li!= error.msg
