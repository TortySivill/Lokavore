extends layout

block content
	.row
		img(src = "/images/logo.png", style="width:200px;")
	.row
		h1= title
		if(failed_login)
			h6 Invalid username or password

		form(action='', method='post')
			div.form-group
				label(for='name') Email:
				input#name.form-control(type=text, name='username',placeholder='Email Address')
			div.form-group
				label(for='password') Password:
				input#password.form-control(type='password',name='password',placeholder='Password')

			button.btn.btn-primary(type='submit') Submit


		if errors
				ul
					for error in errors
						li!=error.msg
